<link href="~/Content/reviews.css" rel="stylesheet" />

@model IEnumerable<ReviewSite1.Models.Review>

@{
    ViewBag.Title = "Index";
}

<h2>Reviews</h2>

@foreach (var item in Model)
{
    <div class="row">
        <div class="thumbnail">

            <p> @Html.DisplayNameFor(model => model.Category.Type) :  @Html.DisplayFor(modelItem => item.Category.Type)</p>

            <p> @Html.DisplayNameFor(model => model.Title) : @Html.DisplayFor(modelItem => item.Title)</p>

            <p>@Html.DisplayNameFor(model => model.Name) : @Html.DisplayFor(modelItem => item.Name)</p>

            <p> @Html.DisplayNameFor(model => model.ReviewDate) : @Html.DisplayFor(modelItem => item.ReviewDate)</p>

            <p>@Html.DisplayNameFor(model => model.ReviewContent) : @Html.DisplayFor(modelItem => item.ReviewContent)</p>

            <p>@Html.DisplayNameFor(model => model.WouldRecommend) : @Html.DisplayFor(modelItem => item.WouldRecommend)</p>

            <p>@Html.DisplayNameFor(model => model.Rating) : @Html.DisplayFor(modelItem => item.Rating)</p>

            <p>
                @Html.ActionLink("Edit", "Edit", new { id = item.ReviewID }) |
                @Html.ActionLink("Details", "Details", new { id = item.ReviewID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.ReviewID })
            </p>
        </div>
    </div>
}

<p>
    @Html.ActionLink("Create New", "Create")
</p>


